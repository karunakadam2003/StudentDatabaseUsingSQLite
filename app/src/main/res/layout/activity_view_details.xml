<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewDetails"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >


  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="50dp"

      android:fontFamily="@font/allura"
      android:gravity="center"
      android:text="Enter Roll Number To View Details  "
      android:textColor="#E91E63"
      android:textSize="40dp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="38dp"
      tools:layout_editor_absoluteY="224dp" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_marginStart="5dp"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="295dp"
      android:text="Roll No "
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="38dp"
      tools:layout_editor_absoluteY="224dp" />

  <EditText
      android:id="@+id/editroll"
      android:layout_width="wrap_content"
      android:layout_height="36dp"

      android:layout_centerHorizontal="true"
      android:layout_marginTop="295dp"
      android:layout_marginBottom="-81dp"
      android:ems="10"

      android:inputType="textPersonName"
      android:textColor="#CF3066"
      android:textColorHint="#5F58BA"
      android:textSize="15dp" />

  <TextView
      android:id="@+id/editname"
      android:layout_width="179dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/editroll"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="-62dp"
      android:ems="10"
      android:hint="Name"
      android:inputType="textPersonName"
      android:textColor="#CF3066"
      android:textColorHint="#5F58BA"

      tools:layout_editor_absoluteX="114dp"
      tools:layout_editor_absoluteY="211dp" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/textView4"
      android:layout_alignParentStart="true"
      android:layout_marginStart="5dp"

      android:layout_marginBottom="-76dp"
      android:text="Name  "
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="38dp"
      tools:layout_editor_absoluteY="287dp" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/textView3"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"

      android:layout_marginStart="9dp"
      android:layout_marginBottom="-60dp"
      android:text="Year "
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="38dp"
      tools:layout_editor_absoluteY="287dp" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/textView5"
      android:layout_alignParentStart="true"
      android:layout_marginStart="6dp"

      android:layout_marginBottom="-56dp"
      android:text="Ph No"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="38dp"
      tools:layout_editor_absoluteY="287dp" />

  <TextView
      android:id="@+id/edityear"
      android:layout_width="wrap_content"
      android:layout_height="31dp"
      android:layout_alignBottom="@+id/editroll"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="-127dp"
      android:ems="10"
      android:hint="Year Of Study"
      android:inputType="number"
      android:textColor="#CF3066"
      android:textColorHint="#5F58BA"
      android:textSize="15dp"
      tools:layout_editor_absoluteX="114dp"
      tools:layout_editor_absoluteY="211dp" />

  <TextView
      android:id="@+id/editPhNo"
      android:layout_width="185dp"
      android:layout_height="31dp"
      android:layout_alignBottom="@+id/edityear"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="109dp"


      android:layout_marginBottom="-64dp"
      android:ems="10"
      android:hint="10 digit Mobile Number"
      android:inputType="textPersonName"
      android:textColor="#CF3066"
      android:textColorHint="#5F58BA"
      android:textSize="15dp"
      tools:layout_editor_absoluteX="110dp"
      tools:layout_editor_absoluteY="211dp" />

  <Button
      android:id="@+id/button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="550dp"
      android:layout_centerHorizontal="true"

      android:text="View" />


</RelativeLayout>